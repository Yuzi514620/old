        loop: true,
        autoplay: true,
        autoplayTimeout: 3000,
        responsive: {
            0: {
                items: 1,
            },
            576: {
                items: 1
            },
            992: {
                items: 1
            }
        }
    });
});

$(document).ready(function () {
    var owl = $('#spk-carousel.owl-carousel');
    owl.owlCarousel({
        stagePadding: 50,
        margin:10,
        nav: true,
        dots: false,
        loop: true,
        lazyLoad:true,
        autoplay: true,
        autoplayHoverPause:true,
        autoplayTimeout: 2000,
        responsive: {
            0: {
                items: 1,
            },
            576: {
                items: 3
            },
            992: {
                items: 4
            },
            1440: {
                items: 5
            }
        }
    });
});

